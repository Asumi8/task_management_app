<h1><%= t('view.user.admin.index.page_title')%></h1>

<p class= "btn btn-primary btn-sm"><%= link_to t('view.user.admin.index.new_user'), new_admin_user_path %></p>

<table class="table">
  <tr>
    <th><%= t('view.user.admin.index.user_name') %></th>
    <th><%= t('view.user.admin.index.email') %></th>
    <th><%= t('view.user.admin.index.task_count') %></th>
  </tr>
  
<% @users.each do |user|%>
    <tr class = "task_row">
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.tasks.count %></td>
      <td class = "btn">
        <label class = "btn btn-secondary btn-sm"><%= link_to t('view.task.show.page_title'), admin_user_path(user.id) %></label>
        <label class = "btn btn-info btn-sm"><%= link_to t('view.task.edit.page_title'), edit_admin_user_path(user.id) %></label>
        <label class = "btn btn-danger btn-sm"><%= link_to t('view.task.destroy.page_title'), admin_user_path(user.id), method: :delete %></label>
      </td>
    </tr>
<% end %>

</table>

<br>
<p class= "btn btn-primary">
  <%= link_to t('view.task.index.page_title'), tasks_path %>
</p>

<style>
.btn a{
  color:white;
}
</style>